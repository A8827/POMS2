<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Num1"
        android:layout_width="335dp"
        android:layout_height="93dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="168dp"
        android:ems="10"
        android:inputType="number"
        android:text="Первое число"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Num2"
        android:layout_width="343dp"
        android:layout_height="101dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="300dp"
        android:ems="10"
        android:inputType="number"
        android:text="Второе число"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/res"
        android:layout_width="138dp"
        android:layout_height="101dp"
        android:layout_marginStart="192dp"
        android:layout_marginLeft="192dp"
        android:layout_marginTop="496dp"
        android:text="Результат"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="158dp"
        android:layout_height="124dp"
        android:layout_marginStart="596dp"
        android:layout_marginLeft="596dp"
        android:layout_marginTop="176dp"
        android:onClick="onButtonClick"
        android:text="+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="158dp"
        android:layout_height="125dp"
        android:layout_marginStart="596dp"
        android:layout_marginLeft="596dp"
        android:layout_marginTop="140dp"
        android:onClick="onButtonClick1"
        android:text="-"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="164dp"
        android:layout_height="127dp"
        android:layout_marginTop="176dp"
        android:layout_marginEnd="208dp"
        android:layout_marginRight="208dp"
        android:onClick="onButtonClick2"
        android:text="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button4"
        android:layout_width="160dp"
        android:layout_height="127dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="212dp"
        android:layout_marginRight="212dp"
        android:onClick="onButtonClick3"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

</androidx.constraintlayout.widget.ConstraintLayout>